[user]
	name = chao.shi
	email = chao.shi@alibaba-inc.com
[color]
	diff = auto
	status = auto
	branch = auto
[color "branch"]
	current = yellow bold
	remote = cyan bold
[color "diff"]
	new = yellow bold
	old = red bold
	meta = cyan bold
	frag = white bold
	commit = white bold
[color "status"]
	added = yellow bold
	changed = cyan bold
	untracked = red bold
[alias]
    ci = commit
    cia = commit -a
    ciam = commit -a --amend
    co = checkout
    br = branch
    st = status
    rb = rebase
    rbc = rebase --continue
    m = merge
    mt = mergetool
    lg = log --graph --decorate --date=local
    cp = cherry-pick
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[core]
	autocrlf = false
[push]
	default = simple
[http]
	sslVerify = false
[init]
	templatedir = /home/chaoshi/.git-core/templates
[branch]
    autosetuprebase = always

