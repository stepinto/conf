[user]
	name = Chao Shi
	email = stepinto@live.com
[color]
	diff = auto
	status = auto
	branch = auto
[color "branch"]
	current = yellow bold
	remote = cyan bold
[color "diff"]
	new = yellow bold
	old = red bold
	meta = cyan bold
	frag = white bold
	commit = white bold
[color "status"]
	added = yellow bold
	changed = cyan bold
	untracked = red bold
[alias]
    ci = commit
    cia = commit -a
    ciam = commit -a --amend
    co = checkout
    br = branch
    st = status
    rb = rebase
    rbc = rebase --continue
    mg = merge
    mt = mergetool
    dt = difftool
    lg = log --graph --decorate --date=local
    cp = cherry-pick
    cpt = commit -a -m 'A checkpoint generated by "git cpt"'
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[[:lower:]]"
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[core]
	autocrlf = false
[push]
	default = simple
[http]
	sslVerify = false
	postBuffer = 524288000
[init]
	templatedir = /home/chaoshi/.git-core/templates
[branch]
    autosetuprebase = always
[sendemail]
    smtpencryption = tls
    smtpuser = stepinto@live.com
    smtpserverport = 587
    smtpserver = smtp.live.com
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[credential]
	helper = store
